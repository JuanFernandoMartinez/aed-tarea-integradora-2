<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="773.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Search">
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin></Label>
            <HBox alignment="CENTER" fillHeight="false" spacing="30.0">
               <children>
                  <TextField prefWidth="275.0" promptText="Type Something..." />
                  <ComboBox fx:id="sortingComboBox" prefWidth="175.0" promptText="Standard" />
                  <Button mnemonicParsing="false" text="Search" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </HBox>
            <TableView maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="1000.0">
               <columns>
                  <TableColumn editable="false" prefWidth="187.0" sortable="false" text="Name" />
                  <TableColumn editable="false" prefWidth="63.0" sortable="false" text="Age" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Team" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Total Rebounds" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Offensive Rebounds" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Blocks" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="True Shooting %" />
                  <TableColumn editable="false" prefWidth="75.0" sortable="false" text="Free Throw %" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
